<% provide :title, t(".forgot_passwd") %>
<h1><%= t ".forgot_passwd" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label :email, t(".email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.submit t ".submit" %>
    <% end %>
  </div>
</div>
